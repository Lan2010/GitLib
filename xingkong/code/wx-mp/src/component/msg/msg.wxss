/* component/msg/msg.wxss */

.msg-wrap {
  position: fixed;
  top: 0;
  left: -1rpx;
  z-index: 10000;
  display: none;
}
.msg-wrap-show {
  display: block;
}
.msg-box {
  position: fixed;
  top: 50%;
  left: 0;
  width: 100%;
  margin: auto;
  padding: 0 40rpx;
  text-align: center;
  -webkit-transform: translate(0, -50%);
  transform: translate(0, -50%);
}
.msg {
  display: inline-block;
  margin: auto;
  min-height: 80rpx;
  padding: 18rpx 50rpx;
  color: rgba(255, 255, 255, 1);
  background: rgba(0, 0, 0, .7);
  border-radius: 44rpx;
}

.msg-content {
  line-height: 48rpx;
  font-size: 32rpx;
}

.msg-mask {

  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
}

.msg {
  opacity: 0;

  -webkit-transition: all .3s ease;
  -moz-transition: all .3s ease;
  -o-transition: all .3s ease;
  transition: all .3s ease; 
}

.msg-mask-show,
.msg-show {
  opacity: 1;
}